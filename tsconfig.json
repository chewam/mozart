{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2018",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "mozart/*": ["./dist/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["examples/**/*", "node_modules/**/*"]
}
